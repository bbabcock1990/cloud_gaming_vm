{
  "navigationFallback": {
    "rewrite": "/index.html"
  },
  "routes": [
    // Default SWA behavior usually handles /api/* for managed functions.
    // No explicit rewrite is typically needed here for the /api path itself.
    // If specific custom routes were needed, they would go here.
    // Example: 
    // {
    //   "route": "/login",
    //   "rewrite": "/.auth/login/aad"
    // }
  ],
  "networking": {
    "allowedIpRanges": ["Public"]
  },
  "globalHeaders": {
    "Content-Security-Policy": "default-src https: 'unsafe-eval' 'unsafe-inline'; object-src 'none'"
  },
  "platform": {
    "apiRuntime": "python",
    "apiBuildCommand": "python -m pip install -r requirements.txt"
    // "appBuildCommand": null // Not needed if no frontend build step
  }
}
